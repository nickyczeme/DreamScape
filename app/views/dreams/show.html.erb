
<div class='container'>
  <div class="row" style="height:100%">
    <div class="col-5 p-3" style="background-color: white">
      <h2>Book <%=@dream.title%></h2>
      <div class="image-show">
        <%= cloudinary_picture(@dream)%>
      </div>
      <div class='dream-info'>
        <div class='dream-info-item'>
          <h3>Category</h3>
          <p><%= @dream.mode.name %></p>
        </div>
        <div class='dream-info-item'>
          <h3>Intensity</h3>
          <p>
            <% @dream.intensity.to_i.times do%><i class="fa-solid fa-circle" style="color:rgb(212, 121, 100)"></i> <% end %>
            <% (5 - @dream.intensity.to_i).times do%><i class="fa-regular fa-circle" style="color:rgb(212, 121, 100)"></i> <% end %>
          </p>
        </div>
        <div class='dream-info-item'>
          <h3>Price</h3>
          <p><i class="fa-solid fa-euro-sign" style='color: grey;font-size: 14px;'></i><%= @dream.price %></p>

        </div>
      </div>

      <div>
        <h3>Description</h3>
        <p style="text-align:justify"><%= @dream.description %></p>
      </div>
    </div>
    <div class="col-5 p-3" style="background-color: white">
      <div class="row" style="height:50%; justify-content:center;">
        <div class="col-10 p-3">
          <div style="width: 100%; height: 100%;"
                      data-controller="mapbox"
                      data-mapbox-markers-value="<%= @markers.to_json %>"
                      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
      <div class="row" style="height:50%; justify-content:center">
        <div class="col-10 p-3">
        </div>
    </div>
  </div>


</div>

<div>
  <%= link_to "Book this dream", new_dream_booking_path(@dream), class: 'btn btn-outline-secondary'%>
</div>
