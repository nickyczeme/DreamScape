





  <div class="row" style="height:100%">
    <div class="col-8">
      <div class="new-form-div">
        <h1 id="new-form-title">Log in</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs sign-in">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'button-our' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        <%# <div class='fake-footer'>hiii</div> %>



      </div>
    </div>

    <div class="col-4">
      <%= image_tag "background.gif", style: 'width: 100%; height: 100vh' %>

    </div>
  </div>
